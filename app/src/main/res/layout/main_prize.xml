<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:carta="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:orientation="vertical"
        android:padding="@dimen/common_padding">

        <kr.edcan.alime.views.CartaDoubleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_padding"
            carta:mainColor="@color/colorPrimary"
            carta:mainText="선수 시상"
            carta:mainTextSize="18dp"
            carta:subColor="@color/notSelectedTextColor"
            carta:subText="입상"
            carta:subTextSize="16dp"
            carta:textMargin="10dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mainPrizeRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="15dp"
            android:text="더 자세한 사항은\n기능경기대회 홈페이지를 참고해주세요!"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>